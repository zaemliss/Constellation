        echo
        echo -e "${blu}   IP                \t Status      \t   Reputation"
        echo -e "${yel}------------------------------------------------------------${grn}"
        curl -s $LB:9000/cluster/info | jq '.[] | {ip: .ip.host, status: .status, reputation: .reputation}' | tr -d '"{}:\n' | sed "s/  ip/\r\n  /g" | sed "s/  status//g" | sed "s/,/    \t/g" | sed "s/reputation//g"
        echo -e "${clr}"
        echo
fi
